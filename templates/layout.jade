doctype html
html
  head
    include ./includes/header.jade

  body
    div#main-container
      div#main-container-inner
        header.mobi
          div#logocont
            a(href="/")
              img(src='img/logo.png')
          div#openmenu
            span Menu
            img(src='img/menumobi.png')

        header.desktop.container
          div#logocont
            img(src="img/logo.png")
          nav#menu
            a(href="/").menu-item.active Home
            a(href="/").menu-item Profile
            a(href="/").menu-item Il divano
            a(href="/").menu-item Prodotti
            a(href="/").menu-item Servizi Dedicati
            a(href="/").menu-item News
            a(href="/").menu-item Contatti

            div#lang-container
              div.triangle
              span English

              nav#langs
                a(href="/it") Italiano
                a(href="/fr") Francais

        block content

        footer
          div#line1
            div.half-width
              img(src="img/logofooter.png")

            div.half-width.right
              a(href="#").social
                img(src="img/twitter.png").centered
              a(href="#").social
                img(src="img/facebook.png").centered
              a(href="#").social
                img(src="img/linkedin.png").centered

          div#line2
            div.half-width
              span P.IVA IT04396150282
              a(href="") Disclaimer
              a(href="") Privacy
              a(href="") Contatti

      div.clearfix

    script(src="js/html5shiv.js")
    script(src="js/TypingText.js")
    script(src="js/interact.min.js")
    script(src="js/components.js")
    script(src="js/main.js")
